{
  "name": "putyourlightson/craft-datastar-module",
  "description": "A real-time, template-driven hypermedia framework for Craft.",
  "version": "1.0.0-beta.4",
  "type": "yii-module",
  "license": "mit",
  "require": {
    "php": "^8.2",
    "craftcms/cms": "^5.0",
    "starfederation/datastar-php": "1.0.0-beta.5"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main",
    "markhuot/craft-pest-core": "^2.0.4",
    "nystudio107/craft-autocomplete": "^1.12"
  },
  "autoload": {
    "psr-4": {
      "putyourlightson\\datastar\\": "src/"
    }
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G",
    "test": "vendor/bin/pest"
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "pestphp/pest-plugin": true,
      "yiisoft/yii2-composer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "support": {
    "docs": "https://github.com/putyourlightson/craft-datastar-module",
    "source": "https://github.com/putyourlightson/craft-datastar-module",
    "issues": "https://github.com/putyourlightson/craft-datastar-module/issues"
  }
}
